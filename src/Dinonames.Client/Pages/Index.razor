@page "/"

<div class="py-12 bg-white">
    <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="lg:text-center">
            <p class="text-base leading-6 text-indigo-600 font-semibold tracking-wide uppercase">Dinoname</p>
            <h3 class="mt-2 text-3xl leading-8 font-bold tracking-tight text-gray-900 sm:text-4xl sm:leading-10">
                Tu nombre en dinosaurio
            </h3>

            <div class="rounded-md shadow-sm mt-6">
                <div>
                    <input @bind="name"
                           aria-label="Your name"
                           required
                           class="appearance-none rounded-none relative
                    block w-full px-3 py-2 border border-gray-300
                    placeholder-gray-500 text-gray-900 rounded-t-md
                    focus:outline-none focus:shadow-outline-blue
                    focus:border-blue-300 focus:z-10 sm:text-sm
                    sm:leading-5" placeholder="Escribe tu nombre">
                </div>
            </div>

            <div class="mt-3">
                <button @onclick="Dinosaurize" type="submit" class="group relative w-50 flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out">
                    <span class="absolute left-0 inset-y-0 flex items-center pl-3">

                    </span>
                    Dinosaurize it!
                </button>
            </div>

            <p id="result" name="result" class="mt-6 max-w-2xl text-xl leading-7 text-gray-800 lg:mx-auto">
                @result
            </p>
        </div>

    </div>
</div>

@code {
    private string name;
    private string result;

    private void Dinosaurize()
    {
        result = new NameDinosaurizer(new Random()).Dinosaurize(name);
    }
}